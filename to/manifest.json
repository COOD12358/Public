{
  "manifest_version": 3,
  "name": "Gmail Markdown Previewer",
  "description": "Write in Markdown or HTML and preview live. Insert the rendered HTML into your Gmail draft.",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "lib/marked.min.js",
        "content.js"
      ],
      "css": [
        "panel.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [],
  "host_permissions": [
    "https://mail.google.com/*"
  ]
}